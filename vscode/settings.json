{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[yaml]": {
    "editor.formatOnSave": false
  },
  "editor.tabSize": 2,
  "editor.wrappingIndent": "none",
  "editor.wordWrap": "on",
  "editor.lineNumbers": "relative",
  "editor.wordWrapColumn": 117,
  "editor.rulers": [117],
  "prettier.printWidth": 117,
  "editor.minimap.enabled": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.accessibilitySupport": "off",
  "trailing-spaces.trimOnSave": true,
  "terminal.integrated.copyOnSelection": true,

  "files.insertFinalNewline": true,
  "files.associations": {
    "*.html.erb": "html"
  },

  "workbench.editor.enablePreview": false,
  "workbench.settings.enableNaturalLanguageSearch": false,

  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "emmet.showExpandedAbbreviation": "never",
  "vim.leader": ",",
  "vim.gdefault": true,
  "vim.startofline": false,
  "vim.insertModeKeyBindings": [{ "before": ["j", "j"], "after": ["<Esc>"] }],
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["-"], "commands": ["workbench.action.decreaseViewSize"] },
    { "before": ["+"], "commands": ["workbench.action.increaseViewSize"] },
    { "before": ["gt"], "commands": ["workbench.action.nextEditor"] },
    { "before": ["gr"], "commands": ["workbench.action.previousEditor"] },
    { "before": ["space"], "commands": ["center-editor-window.center"] },
    { "before": ["gT"], "commands": ["workbench.action.previousEditor"] },
    { "before": ["s"], "commands": ["workbench.action.files.save"] },
    { "before": ["backspace"], "commands": ["workbench.action.navigateBack"] },
    { "before": ["<leader>", "g", "r"], "commands": ["extension.gitGrep"] },
    { "before": ["<leader>", "v", "i"], "commands": ["workbench.action.openSettingsJson"] },
    { "before": ["<leader>", "v", "s"], "commands": [":tabe /Users/jb/Dropbox/Rails/rails-vscode.md"] },
    { "before": ["<leader>", "s", "k"], "commands": [":tabe db/schema.rb"] },
    { "before": ["<leader>", "s", "c"], "commands": [":tabe config/schedule.rb"] },
    { "before": ["<leader>", "r", "t"], "commands": [":tabe config/routes.rb"] },
    { "before": ["<leader>", "g", "m"], "commands": [":tabe Gemfile"] },
    { "before": ["<leader>", "a", "b"], "commands": [":tabe app/models/ability.rb"] },
    { "before": ["<leader>", "l", "m"], "commands": ["extension.railsLatestMigration"] },
    { "before": ["<leader>", "<leader>"], "commands": ["workbench.action.showCommands"] },
    { "before": ["<leader>", "n"], "commands": ["renameFile"] },
    { "before": ["F4"], "commands": ["workbench.action.closeActiveEditor"] },
    { "before": ["tab"], "commands": ["workbench.action.focusBelowGroup"] },
    { "before": ["tab"], "commands": ["workbench.action.focusNextGroup"] },
    { "before": ["Z", "Z"], "commands": [":wq"] }
  ],
  "workbench.activityBar.visible": true,
  "html.validate.scripts": false,
  "ruby.specSaveFile": true,
  "ruby.specCommand": "bundle exec bin/rspec",
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/coverage": true,
    "**/log": true,
    "**/public/uploads": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/log": true
  },
  "plantuml.diagramsRoot": "doc/diagrams/src",
  "plantuml.exportOutDir": "doc/diagrams/out",
  // Enable/disable navigation breadcrumbs.
  "breadcrumbs.enabled": true
}
