{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Rubocop
  "ruby.format": "rubocop",
  "ruby.rubocop.onSave": true,
  "[ruby]": {
    "editor.defaultFormatter": "misogi.ruby-rubocop",
    "editor.formatOnSave": true
  },
  "[gemfile]": {
    "editor.defaultFormatter": "testdouble.vscode-standard-ruby"
  },
  "[yaml]": {
    "editor.formatOnSave": false
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "editor.tabSize": 2,
  "editor.wrappingIndent": "none",
  "editor.wordWrap": "off",
  "editor.lineNumbers": "on",
  "editor.wordWrapColumn": 117,
  "editor.rulers": [117],
  "prettier.printWidth": 117,
  "yaml.format.printWidth": 117,
  "editor.minimap.enabled": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.accessibilitySupport": "off",
  "editor.find.seedSearchStringFromSelection": "always",
  "trailing-spaces.trimOnSave": true,
  "terminal.integrated.copyOnSelection": true,
  "files.insertFinalNewline": true,
  "workbench.editor.enablePreview": false,
  "workbench.activityBar.visible": true,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.colorCustomizations": {
    "tab.activeBorderTop": "#b2c9e0",
    "tab.inactiveBackground": "#444"
  },

  "telemetry.telemetryLevel": "off",
  "emmet.showExpandedAbbreviation": "never",
  "emmet.includeLanguages": { "html.erb": "erb" },
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "html.validate.scripts": false,
  "ruby.specSaveFile": true,
  "ruby.specCommand": "bundle exec bin/rspec",
  "ruby.specClearTerminal": false,
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/coverage": true,
    "**/log": true,
    "**/public/uploads": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/log": true
  },
  "plantuml.diagramsRoot": "doc/diagrams/src",
  "plantuml.exportOutDir": "doc/diagrams/out",
  // Enable/disable navigation breadcrumbs.
  "breadcrumbs.enabled": true,
  "editor.snippetSuggestions": "none",
  "editor.suggest.showSnippets": false,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "vsicons.dontShowNewVersionMessage": true,
  "explorer.confirmDragAndDrop": false,
  "editor.cursorStyle": "line",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "redhat.telemetry.enabled": false,
  "editor.detectIndentation": false,
  "security.workspace.trust.startupPrompt": "always",
  "window.zoomLevel": -1,
  "workbench.startupEditor": "none",
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "explorer.confirmDelete": false
}
